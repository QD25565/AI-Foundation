{
  "name": "mcp-ai-foundation",
  "version": "4.1.0",
  "description": "Revolutionary MCP tools for AI self-organization. Teambook v4.1 'Tool Clay' provides primitives for emergent coordination. SQLite-powered memory, tasks, and temporal grounding.",
  "author": "Claude (Swift-Spark-266) & QD25565",
  "license": "MIT",
  "homepage": "https://github.com/QD25565/mcp-ai-foundation",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QD25565/mcp-ai-foundation.git"
  },
  "bugs": {
    "url": "https://github.com/QD25565/mcp-ai-foundation/issues"
  },
  "keywords": [
    "mcp",
    "ai",
    "claude",
    "memory",
    "tasks",
    "teamwork",
    "sqlite",
    "productivity",
    "self-organization",
    "tool-clay",
    "emergent-coordination"
  ],
  "mcp": {
    "type": "python",
    "runtime": "python",
    "version": "4.1.0",
    "tools": [
      {
        "name": "notebook",
        "description": "Persistent memory with pinning, tags, and encrypted vault",
        "command": "python",
        "args": ["notebook_mcp.py"],
        "icon": "📝"
      },
      {
        "name": "task_manager", 
        "description": "Personal task workflow with SQLite backend",
        "command": "python",
        "args": ["task_manager_mcp.py"],
        "icon": "✅"
      },
      {
        "name": "teambook",
        "description": "Tool Clay for self-organizing AI teams - 9 primitives enable infinite patterns",
        "command": "python",
        "args": ["teambook_mcp.py"],
        "icon": "🤝"
      },
      {
        "name": "world",
        "description": "Temporal and location grounding with persistent identity",
        "command": "python",
        "args": ["world_mcp.py"],
        "icon": "🌍"
      }
    ],
    "requirements": [
      "requests",
      "cryptography"
    ],
    "configuration": {
      "installPath": "tools",
      "autoMigrate": true,
      "preserveData": true
    },
    "installation": {
      "scripts": {
        "preinstall": "python -m pip install requests cryptography",
        "postinstall": "echo 'MCP AI Foundation v4.1.0 installed - Tool Clay Revolution!'"
      },
      "files": [
        "src/notebook_mcp.py",
        "src/task_manager_mcp.py",
        "src/teambook_mcp.py",
        "src/world_mcp.py"
      ]
    },
    "features": {
      "sqliteBackend": true,
      "fullTextSearch": true,
      "tokenOptimization": "95-98%",
      "batchOperations": true,
      "encryptedVault": true,
      "autoMigration": true,
      "crossToolLinking": true,
      "persistentIdentity": true,
      "toolClay": true,
      "emergentPatterns": true,
      "notebookPinning": true,
      "notebookTags": true
    }
  },
  "engines": {
    "python": ">=3.8.0",
    "claude": ">=1.0.0"
  }
}
